{
  "manifest_version": 2,
  "name": "Pin It",
  "version": "1.0.2",

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": "pin.svg",
    "default_title": "Pin It"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["pin.css"]
    }
  ],

  "background": {
    "scripts": [
        "background.js"
    ]
  }
}
