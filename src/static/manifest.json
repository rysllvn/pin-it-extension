{
  "manifest_version": 2,
  "name": "Pin It",
  "version": "1.0",

  "permissions": ["contextMenus"],

  "browser_action": {
    "default_icon": "pin-48.png",
    "_default_icon": "https://freeicons.io/basic-ui-elements-3/basic-pin-icon-14160#",
    "default_title": "Pin It",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
        "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
